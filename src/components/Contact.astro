---
import { getTranslations } from "../i18n/utils";

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang);
---
<section id="contact" class="py-20 px-4">
  <div class="max-w-3xl mx-auto" data-aos="fade-up">
    <h2 class="text-4xl font-bold mb-12 text-center">{t.contact.title}</h2>
    <form class="space-y-6">
      <div>
        <label for="name" class="block text-sm font-medium text-gray-300 dark:text-light-text mb-2">{t.contact.name}</label>
        <input
          type="text"
          id="name"
          name="name"
          class="w-full px-4 py-3 bg-black/20 dark:bg-light-bg border border-gray-700 dark:border-light-accent rounded-lg focus:outline-none focus:border-nexogen-blue text-white dark:text-light-text"
          required
        />
      </div>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-300 dark:text-light-text mb-2">{t.contact.email}</label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-3 bg-black/20 dark:bg-light-bg border border-gray-700 dark:border-light-accent rounded-lg focus:outline-none focus:border-nexogen-blue text-white dark:text-light-text"
          required
        />
      </div>
      <div>
        <label for="message" class="block text-sm font-medium text-gray-300 dark:text-light-text mb-2">{t.contact.message}</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          class="w-full px-4 py-3 bg-black/20 dark:bg-light-bg border border-gray-700 dark:border-light-accent rounded-lg focus:outline-none focus:border-nexogen-blue text-white dark:text-light-text"
          required
        ></textarea>
      </div>
      <div class="flex gap-4">
        <button
          type="submit"
          class="flex-1 bg-nexogen-blue hover:bg-blue-600 text-white px-8 py-4 rounded-lg font-semibold transition-all dark:hover:shadow-light-btn"
        >
          {t.contact.send}
        </button>
        <button
          type="reset"
          class="px-8 py-4 rounded-lg font-semibold border border-nexogen-magenta text-nexogen-magenta hover:bg-nexogen-magenta/10 transition-all dark:hover:shadow-light-btn"
        >
          {t.contact.reset}
        </button>
      </div>
    </form>
  </div>
</section>