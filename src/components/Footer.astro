---
import { getTranslations } from "../i18n/utils";
import logoNexogen from '../assets/logo-nexogen.png';

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang);

const currentYear = new Date().getFullYear();
---
<footer class="py-12 px-4 border-t border-gray-800 dark:border-light-accent">
  <div class="max-w-6xl mx-auto">
    <div class="grid md:grid-cols-3 gap-8 mb-12">
      <div>
        <div class="mb-4">
          <img src={logoNexogen.src} alt="Nexogen Logo" class="h-10 w-auto" />
        </div>
        <p class="text-gray-400 dark:text-light-text">{t.footer.company}</p>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4 dark:text-light-text">{t.footer.contact}</h4>
        <p class="text-gray-400 dark:text-light-text/70">{t.footer.email}</p>
        <p class="text-gray-400 dark:text-light-text/70">{t.footer.phone}</p>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4 dark:text-light-text">{t.footer.follow}</h4>
        <div class="flex space-x-4">
          <a href="#" class="text-gray-400 dark:text-light-text/70 hover:text-nexogen-blue dark:hover:text-nexogen-blue transition-colors">
            LinkedIn
          </a>
          <a href="#" class="text-gray-400 dark:text-light-text/70 hover:text-nexogen-blue dark:hover:text-nexogen-blue transition-colors">
            Twitter
          </a>
          <a href="#" class="text-gray-400 dark:text-light-text/70 hover:text-nexogen-blue dark:hover:text-nexogen-blue transition-colors">
            GitHub
          </a>
        </div>
      </div>
    </div>
    <div class="text-center text-gray-400 dark:text-light-text/70 pt-8 border-t border-gray-800 dark:border-light-accent">
      <p>&copy; {currentYear} Nexogen. {t.footer.copyright}</p>
    </div>
  </div>
</footer>